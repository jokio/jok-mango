{
  "name": "mango-repo",
  "version": "0.0.0-semantic-release",
  "author": "Jok Entertainers",
  "description": "Simplified way to work with MongoDB",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "start": "ts-node src",
    "test": "jest",
    "test-ci": "jest --coverage",
    "dev": "nodemon",
    "build": "tsc",
    "lint": "tslint --project .",
    "cleanup": "rm -fr dist/",
    "prepublishOnly": "yarn build",
    "postpack": "yarn cleanup"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "mongodb": "4.8.0"
  },
  "optionalDependencies": {
    "fsevents": "2.1.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/mongodb": "4.0.7",
    "@types/node": "15.12.2",
    "dotenv": "6.2.0",
    "jest": "27.0.4",
    "nodemon": "2.0.7",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "tslint": "6.1.3",
    "typescript": "4.3.2"
  },
  "resolutions": {
    "**/event-stream": "^4.0.1"
  },
  "release": {
    "branch": "master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jokio/jok-mango"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "jok"
  ],
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@nrwl/jest": "^12.3.6"
  }
}
