{
	"name": "jok-mango",
	"version": "0.0.0-semantic-release",
	"author": "Jok Entertainers",
	"description": "Simplified way to work with MongoDB",
	"main": "dist/index.js",
	"types": "dist/index.d.js",
	"scripts": {
		"start": "ts-node src",
		"test": "jest",
		"test-ci": "jest --coverage",
		"dev": "nodemon",
		"build": "tsc",
		"lint": "tslint --project .",
		"cleanup": "rm -fr dist/",
		"prepublishOnly": "yarn build",
		"postpack": "yarn cleanup"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"mongodb": "3.3.4"
	},
	"devDependencies": {
		"@types/jest": "24.0.23",
		"@types/mongodb": "3.3.10",
		"@types/node": "11.11.4",
		"dotenv": "6.2.0",
		"jest": "24.5.0",
		"nodemon": "1.19.2",
		"ts-jest": "24.0.0",
		"ts-node": "8.0.3",
		"tslint": "5.13.1",
		"typescript": "3.3.3333"
	},
	"resolutions": {
		"**/event-stream": "^4.0.1"
	},
	"release": {
		"branch": "master"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jokio/jok-mango"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"jok"
	],
	"license": "MIT",
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testURL": "http://localhost",
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
